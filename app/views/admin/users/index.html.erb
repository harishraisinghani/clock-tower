<%= render "search" %>

<div class="container padding-top-20">

  <% if @users && @users.any? %>
    <%= paginate @users %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Location</th>
          <th>Rates</th>
          <th>Last Entry</th>
          <th>Active</th>
          <th>Admin</th>
          <th style="width:40px"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
    <%= paginate @users %>
  <% else %>
    <div>No users</div>
  <% end %>
</div>
